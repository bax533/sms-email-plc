<Window x:Class="SMS_EMAIL_PLC.AddMessage_Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SMS_EMAIL_PLC"
        mc:Ignorable="d"
        Title="AddMessage_Dialog" Height="450" Width="800"
        Background="#252525"
        Closing ="MessageDialog_Closing"
        >
    <Viewbox StretchDirection="Both" Stretch="Uniform">
        <Grid Height="250" Width="400">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Height="10"/>
                <TextBox FontSize="15" Name="ID_text" TextAlignment="Center" Width="400" Height="30" Background="#656565" Foreground="WhiteSmoke" Text="{Binding ID}"/>
                <TextBox FontSize="15" Name="Name_text" TextWrapping="Wrap" TextAlignment="Center" Width="400" Height="60" Background="#656565" Foreground="WhiteSmoke" Text="{Binding Comment}"/>
                <Button Content="DODAJ" Height="50" Click="AddMessage_Dialog_Click"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
