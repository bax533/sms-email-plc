<Window x:Class="SMS_EMAIL_PLC.SMS_Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SMS_EMAIL_PLC"
        mc:Ignorable="d"
        Title="Input_Dialog" Height="200" Width="400">
    <Viewbox StretchDirection="Both" Stretch="Uniform">
        <Grid Height="180" Width="400" Background="LightGray">
            <StackPanel Width="300">
                <Border BorderThickness="1" BorderBrush="Gray">
                    <TextBox Name="Input_Box" Height="130" Width="400"/>
                </Border>
                <Button Content="zapisz" Height="45" Click="Return_Click"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
