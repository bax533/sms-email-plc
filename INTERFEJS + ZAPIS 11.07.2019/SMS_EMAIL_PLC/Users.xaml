<Page x:Class="SMS_EMAIL_PLC.Users_Page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SMS_EMAIL_PLC"
        mc:Ignorable="d"
        Title="Users" Height="440" Width="580"
        Foreground="WhiteSmoke"

        >


    <Viewbox StretchDirection="Both" Stretch="Uniform">
        <Grid Height="450" Width="580">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="40*"/>
            </Grid.RowDefinitions>
            <StackPanel Name="Toolbar_Buttons" Orientation="Horizontal" Grid.Row="0"/>
            <Button Content="Dodaj Użytkownika" FontSize="15" Click="AddButton_Click" Grid.Row="1" Width="150" HorizontalAlignment="Right" Margin="0, 0, 40, 0"
                    ToolTipService.InitialShowDelay="5000" 
                    ToolTipService.BetweenShowDelay="10000" 
                    ToolTip="dodaj użytkownika"/>
            <StackPanel Orientation="Horizontal" Grid.Row="2">
                <StackPanel HorizontalAlignment="Center" Height="370" VerticalAlignment="Top" Margin="0, 30, 0,0">
                    <StackPanel>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="370">
                            <StackPanel Orientation="Horizontal" Grid.RowSpan="2" Grid.ColumnSpan="2" MaxHeight="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type StackPanel}}, Path=Height}">

                                <StackPanel Background="#555555">
                                    <Border BorderThickness="1" BorderBrush="Black">
                                         <TextBlock Text="ID" FontSize="15" Width="50" TextAlignment="Center"/>
                                    </Border>
                                    <Border BorderBrush="Black" BorderThickness="1, 0, 1, 1">
                                        <StackPanel Name= "ID_Panel"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Background="#555555">
                                    <Border BorderThickness="0, 1, 1, 1" BorderBrush="Black">
                                        <TextBlock Text="NAZWA" FontSize="15" Width="150" TextAlignment="Center"/>
                                    </Border>
                                    <Border BorderBrush="Black" BorderThickness="0, 0, 1, 1">
                                        <StackPanel Name= "Name_Panel"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Background="#555555">
                                    <Border BorderThickness="0, 1, 1, 1" BorderBrush="Black">
                                        <TextBlock Text="NUMER" FontSize="15" Width="100" TextAlignment="Center"/>
                                    </Border>
                                    <Border BorderBrush="Black" BorderThickness="0, 0, 1, 1">
                                        <StackPanel Name= "PhoneNumber_Panel"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Background="#555555">
                                    <Border BorderThickness="0, 1, 1, 1" BorderBrush="Black">
                                        <TextBlock Text="EMAIL" FontSize="15" Width="140" TextAlignment="Center"/>
                                    </Border>
                                    <Border BorderBrush="Black" BorderThickness="0, 0, 1, 1">
                                        <StackPanel Name= "Email_Panel"/>
                                    </Border>
                                </StackPanel>
                                <StackPanel>
                                    <Button Name="RemoveExpand_Button" Content="Usuwanie v" FontSize="15" Click="RemoveExpand_Click"/>
                                    <StackPanel Name="RemoveButtons_Panel" Width="80"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Viewbox>
</Page>
