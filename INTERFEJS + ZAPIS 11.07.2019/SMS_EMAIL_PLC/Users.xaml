<Window x:Class="SMS_EMAIL_PLC.Users_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SMS_EMAIL_PLC"
        mc:Ignorable="d"
        Closing="UsersWindow_Closing"
        Title="Users" Height="450" Width="800"
        WindowState ="Maximized"
        >

    <Window.Resources>
        <RoutedUICommand x:Key="Save"/>
    </Window.Resources>

    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource Save}" Executed="Save"/>
    </Window.CommandBindings>

    <Window.InputBindings>
        <KeyBinding Gesture="CTRL+S" Command="{StaticResource Save}"/>
    </Window.InputBindings>

    <Viewbox StretchDirection="Both" Stretch="Uniform">
        <Grid Height="450" Width="840" Background="LightGray">
            <StackPanel HorizontalAlignment="Center" Height="370" VerticalAlignment="Top">
                <StackPanel Name="Toolbar_Panel" Height="25"/>
                <StackPanel>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="370">
                        <StackPanel Orientation="Horizontal" Grid.RowSpan="2" Grid.ColumnSpan="2" MaxHeight="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type StackPanel}}, Path=Height}">
                            
                            <Border CornerRadius="2" BorderBrush="Gray" Background="LightGray" BorderThickness="2" DockPanel.Dock="Top">
                                <StackPanel Name= "ID_Panel" >
                                    <Border BorderThickness="1" BorderBrush="Gray">
                                        <TextBlock Text="ID" FontSize="15" Width="50" TextAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <Border CornerRadius="2" BorderBrush="Gray" Background="LightGray" BorderThickness="2" DockPanel.Dock="Top">
                                <StackPanel Name= "Name_Panel">
                                    <Border BorderThickness="1" BorderBrush="Gray">
                                        <TextBlock Text="NAZWA" FontSize="15" Width="150" TextAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <Border CornerRadius="2" BorderBrush="Gray" Background="LightGray" BorderThickness="2" DockPanel.Dock="Top">
                                <StackPanel Name= "PhoneNumber_Panel">
                                    <Border BorderThickness="1" BorderBrush="Gray">
                                        <TextBlock Text="NUMER" FontSize="15" Width="100" TextAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <Border CornerRadius="2" BorderBrush="Gray" Background="LightGray" BorderThickness="2" DockPanel.Dock="Top">
                                <StackPanel Name= "Email_Panel">
                                    <Border BorderThickness="1" BorderBrush="Gray">
                                        <TextBlock Text="EMAIL" FontSize="15" Width="140" TextAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                            <StackPanel Name="RemoveButtons_Panel" Width="80">
                                <Button Content="dodaj" FontSize="15" Click="AddButton_Click"/>
                            </StackPanel>
                            <Button Width="60" VerticalAlignment="Top" Click="SaveSettings_Click" Content="zapisz" FontSize="15"/>
                        </StackPanel>
                    </ScrollViewer>
                    
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Width="300" Height="30" VerticalAlignment="Bottom">
                <Button Name="SaveUsers_Button" Click="SaveButton_Click" Height="30" Width="100" Content="eksportuj"/>
                <Button Name="LoadUsers_Button" Click="LoadButton_Click" Height="30" Width="100" Content="importuj"/>
                <Button Content="wczytaj z bazy" Click="LoadDatabase_Click" Height="30" VerticalAlignment="Top" Width="100"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
